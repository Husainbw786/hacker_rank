

#include <stdio.h>
int main()
{
    int n,k,i,max=0,dose;
    scanf("%d %d",&n,&k);
    int arr[n];
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    for(i=0;i<n;i++)
    {
        if(arr[i]>max )
        {
            max = arr[i];
        }
        else if(max>k)
        {
       dose = max - k;
        }
        
    }
    printf("%d",dose);
}
