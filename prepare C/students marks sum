

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

//Complete the following function.

int marks_summation(int* marks, int number_of_students, char gender) {
  int i,b=0,g=0;
  for(i=0;i<number_of_students;i++)
  {
      if(i%2==0)
      b = b + *(marks+i);
      
      else
      g= g + *(marks+i);
  }
  if (gender == 'g' )
  return g;
  else
  return b;
}

